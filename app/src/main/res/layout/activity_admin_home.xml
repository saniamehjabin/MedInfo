<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".AdminHomeActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome admin!"
        android:textStyle="bold"
        android:textColor="#DE5F5F"
        android:layout_marginBottom="20dp"
        android:textSize="24dp"
        />

    <Button
        android:id="@+id/btn_view_product"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#00BCD4"
        android:text="View Medicine"
        android:layout_marginBottom="10dp"
        />

    <Button
        android:id="@+id/btn_insert_product"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="Insert Medicine"
        android:backgroundTint="#00BCD4"
        android:layout_marginBottom="10dp"
        />

    <Button
        android:id="@+id/btn_update_product"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:backgroundTint="#00BCD4"
        android:text="Update Medicine" />
    <Button
        android:id="@+id/btn_delete_product"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#00BCD4"
        android:text="Delete Medicine"
        android:layout_marginBottom="10dp"
        />





</LinearLayout>